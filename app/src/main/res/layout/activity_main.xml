<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/mainbtnrectangle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:shadowDy="8.0"
            android:shadowDx="5.0"
            android:shadowColor="@color/black"
            android:shadowRadius="20"
            android:gravity="center"

            android:text="ESCOJE TU OPCION"
            android:textColor="@color/white"
            android:fontFamily="@font/impact"
            android:textSize="42dp" />

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageButton
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/conductor_btn"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:background="@drawable/driverlogomain"
           />

    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageButton
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:id="@+id/pasajero_btn"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/pasajerologomain"/>
    </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>