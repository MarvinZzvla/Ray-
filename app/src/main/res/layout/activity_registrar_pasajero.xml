<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbtnrectangle"
    android:orientation="vertical">

    <!--Background in TOP -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/background_top_register" />
    </LinearLayout> <!--END Background TOP -->


    <!--Input LAYOUT -->
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/inputbox_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Nombre Input -->
            <LinearLayout
                android:layout_margin="10dp"
                android:background="@drawable/input_bg"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/nameRegister"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:gravity="center"
                    android:textColorHint="#989595"/>
            </LinearLayout><!--END nombre Input -->

            <!--APELLIDO -->
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/input_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/apellidoRegister"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellido"
                    android:textColorHint="#989595"
                    android:gravity="center"/>
            </LinearLayout> <!--END Apellido -->

        </LinearLayout>

        <!--EMAIL INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg">

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/emailRegister"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="#989595"
                android:fontFamily="sans-serif-black" />
        </LinearLayout> <!-- END EMAIL INPUT  -->

        <!--PASSWORD INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg">

            <EditText
                android:id="@+id/passwordRegister"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contrase単a (6 caracteres)"
                android:textColorHint="#989595"
                android:fontFamily="sans-serif-black"
                android:inputType="textPassword"/>
        </LinearLayout> <!-- END PASSWORD INPUT  -->
        <!--CONFIRM INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg">

            <EditText
                android:id="@+id/confirmarPasswordRegister"
                android:inputType="textPassword"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirmar Contrase単a"
                android:textColorHint="#989595"
                android:fontFamily="sans-serif-black" />
        </LinearLayout> <!-- END CONFIRM INPUT  -->

        <!--PHONE INPUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/input_bg">

            <EditText
                android:inputType="phone"
                android:id="@+id/phoneRegister"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numero de Celular"
                android:textColorHint="#989595"
                android:fontFamily="sans-serif-black" />
        </LinearLayout> <!-- END PHONE INPUT  -->

        <!--SPINNER LAYOUT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:background="@drawable/input_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#989595"
                android:text="Ciudad"
                android:fontFamily="sans-serif-black"
                android:textSize="21sp"
                android:padding="10dp"/>

            <Spinner
                android:background="@drawable/spinner_bg"
                android:layout_weight="1"
                android:id="@+id/listCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end" />

        </LinearLayout> <!--END SPINNER LAYOUT -->

        <!--BUTTON REGISTRAR AND DRIVER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/registrarButton"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/buttonbg"
                android:textColorHint="@color/white"
                android:fontFamily="sans-serif-black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Registrarse"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/input_bg"
                android:paddingEnd="20dp"
                android:layout_marginEnd="10dp">

            <CheckBox
                android:id="@+id/isDriver"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductor"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout><!-- END REGISTRAR BTN AND DRIVER -->



    </LinearLayout>


    <!-- Image BackGround Bottom -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/background_register" />
    </LinearLayout>


</LinearLayout>

